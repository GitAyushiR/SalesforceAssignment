          <li><a href="javascript:void(0);" >Auto Recharge</a></li></div>
      <div class="slds-navigation-list--vertical__action slds-text-link--reset" >
          <li><a href="javascript:void(0);" >Update Account Information</a></li></div>
           </ul></div>
       <div class="header3">
       <ul class="slds-navigation-list--vertical slds-has-block-links--space">
      <div class="slds-navigation-list--vertical__action slds-text-link--reset" >
          <li><a href="javascript:void(0);" >Alert Preference</a></li></div>
           </ul></div>
  
</div>
    </div>

    <aura:if isTrue="{!v.condition}">
        <p><c:MyAccountDetails/></p>
        <p><c:weatherComponent/></p>
