       <div class ="header">
           <p class="ab1">My Account</p></div>
  				<div class="header1">   
  					<ul class="slds-navigation-list--vertical slds-has-block-links--space">
      					<div class="slds-navigation-list--vertical__action slds-text-link--reset" >
          					<li><a href="javascript:void(0);" >Add Account</a></li></div>
      							<div class="slds-navigation-list--vertical__action slds-text-link--reset">
          							<li><a href="javascript:void(0);" onclick="{!c.myAction}" >Account Details</a></li></div>
      								   <div class="slds-navigation-list--vertical__action slds-text-link--reset">
          									<li><a href="javascript:void(0);" >Recharge</a></li></div>
