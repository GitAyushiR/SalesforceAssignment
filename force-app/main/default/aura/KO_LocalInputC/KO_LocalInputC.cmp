<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" >

	
    <div>
        <div class="slds-grid slds-wrap media-main-section animated-container slds-is-relative">
            <div class="slds-col slds-size_1-of-1 slds-medium-size_12-of-12 slds-large-size_12-of-12 ">
                <div class="slds-grid slds-wrap">
                    <div class="slds-col slds-size_1-of-1 slds-small-size_1-of-1 slds-medium-size_5-of-12 slds-large-size_5-of-12 slds-small-order--1 slds-medium-order--2 slds-large-order--2">
                    	<div class="slds-col slds-size_1-of-1 " style="margin-left:-50px;">
                        	<div class="header " style="margin-top:105px;"  >
                                <p class="heading" style="border-color: #FDE57B; font-family: 'GermaniaOne' ">Local Input</p>
                                
                            </div>
                            <div class="localinputText" style="font-family: 'Josefin_Sans'; font-size:24px; letter-spacing: 1.2px; color: #000000; opacity: 1;">
                                
                            	<p class="josefinSans-font font-16 line-height-23 slds-m-bottom_large slds-p-top_large">
									This is a special offer for On Premise Distributor. This week you can purchase X cases of Ketel One Citroen Vodka for $XX.XX per case.								</p>   
                             </div>
                            
                        </div>
                    </div>
                                       <div class="slds-col slds-size_1-of-1 slds-small-size_1-of-1 slds-medium-size_7-of-12 slds-large-size_7-of-12 slds-small-order--3 slds-medium-order--1 slds-large-order--1">
                    	<div class="slds-col slds-size_1-of-1 images">
                            
                            <div class="localInput">
                                
                                <img src="{!$Resource.KO_LocalInputC1}" style="position:absolute;"/>
                                <img  src="{!$Resource.KO_LocalInputC2}" style="position:relative;" />
                            </div>
                            
                        </div>
                        
                    </div>
                    
                    <div class="slds-col slds-size_1-of-1 slds-small-size_1-of-1 slds-medium-size_12-of-12 slds-large-size_12-of-12 slds-small-order--2 slds-medium-order--3 slds-large-order--3">
                    	
                        <div class="slds-grid slds-wrap">
                            <div class="slds-p-left_large slds-p-top_small">
                            <img src="{!$Resource.KO_Arrow_Left}" />
                        </div>
                            <div class="slds-p-right_large slds-p-top_small" style="margin-left:800px;">
                            <img src="{!$Resource.KO_Arrow_Right}" />
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</aura:component>