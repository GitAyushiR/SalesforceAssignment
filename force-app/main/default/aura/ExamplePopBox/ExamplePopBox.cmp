<aura:component controller="BuildPicklistOfUsers" implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"></aura:handler>

    <aura:attribute name="users" type="user[]"></aura:attribute>
<aura:attribute name="uSelected" type="user"></aura:attribute>
     

    <lightning:select label="* Parameter" name="uzr" aura:id="uzr" onchange="{!c.onChangeVal}">

        <aura:iteration items="{!v.users}" var="user">
			
            <option value="{!user.Id}">{!user.Name}</option>

        </aura:iteration>

    </lightning:select>

     Selected Val : {!v.uSelected.Name}
    
<lightning:select label="* Type" name="uzr" aura:id="uzr" onchange="{!c.onChangeVal}">

        <aura:iteration items="{!v.users}" var="user">
			
            <option value="{!user.Id}">{!user.Name}</option>

        </aura:iteration>

    </lightning:select>


</aura:component>